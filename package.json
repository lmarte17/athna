{
  "name": "ghost-browser",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "electron",
    "orchestration",
    "cloud"
  ],
  "scripts": {
    "start": "npm run start -w @ghost-browser/electron",
    "cdp:smoke": "npm run cdp:smoke -w @ghost-browser/orchestration",
    "ax:smoke": "npm run ax:smoke -w @ghost-browser/orchestration",
    "index:smoke": "npm run index:smoke -w @ghost-browser/orchestration",
    "navigator:smoke": "npm run navigator:smoke -w @ghost-browser/orchestration",
    "action:smoke": "npm run action:smoke -w @ghost-browser/orchestration",
    "loop:smoke": "npm run loop:smoke -w @ghost-browser/orchestration",
    "tiered:smoke": "npm run tiered:smoke -w @ghost-browser/orchestration",
    "context:smoke": "npm run context:smoke -w @ghost-browser/orchestration",
    "pool:smoke": "npm run pool:smoke -w @ghost-browser/orchestration",
    "gemini:spike": "npm run gemini:spike -w @ghost-browser/orchestration",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "prettier . --write",
    "format:check": "prettier . --check"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}
